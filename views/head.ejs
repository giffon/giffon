	<script src="https://js.stripe.com/v3/"></script>

	<link rel="stylesheet" type="text/css" href="/css/color.css">
	<link rel="stylesheet" type="text/css" href="/css/fontsize.css">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<%
	bodyClasses.push(locals.user == null ? 'signed-out' : 'signed-in');

	if (isBeta) {
		bodyClasses.push('beta');
	}
%>
<body class="d-flex <%= bodyClasses.join(' ') %>">
<div class="content">
<% if (isBeta) { %>
<div id="nav">
	<% if (locals.user == null) { %>
		<a href="/login" class="signInBtn">Sign in<i class="fab fa-facebook"></i></a>
	<% } else { %>
		<% if (bodyClasses.indexOf("page-index") >= 0) { %>
			<span class="greeting">Hi, <a class="user-name" href="/home"><%= user.user_name %></a>!</span>
		<% } else { %>
			<a class="user-name" href="/home"><%= user.user_name %></a>
		<% } %>
		<a href="/logout" class="signOutBtn">Sign out</a>
	<% } %>
</div>
<% } %>