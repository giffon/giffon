<%
locals.title = "Home - Giffon";
%>
<%- include('head'); -%>

<div class="container">
    <h1>Welcome, <%= user.name %>!</h1>

    <div>
    <% if (campaigns.length == 0) { %>
        <p>You don't have any Giffon campaign yet.</p>
        <a href="/create-campaign">Make a wish.</a>
    <% } else { %>
        Your current <%= campaigns.length == 1 ? "campaign" : "campaigns" %>:
        <ul>
        <% campaigns.forEach(function(campaign) { %>
            <li>
                <pre><%=JSON.stringify(campaign, null, "  ")%></pre>
            </li>
        <% }); %>
        </ul>
    <% } %>
    </div>
</div>

<footer class="p-5 text-center">
Copyright &copy; Giffon. All Rights Reserved.
</footer>

<%- include('foot'); -%>