<%
locals.title = "Home - Giffon";
bodyClasses.push("page-home");
%>
<%- include('head'); -%>

<div class="container">
    <h1>Welcome, <%= user.user_name %>!</h1>

    <p><a href="/user/<%=user.user_hashid%>">public profile</a></p>

    <div>
        <h2>Your wishes</h2>
    <% if (wishes.length == 0) { %>
        <p>You don't have any Giffon wish yet.</p>
        <p><a href="/make-a-wish">Make a wish.</a></p>
    <% } else { %>
        Your current <%= wishes.length == 1 ? "wish" : "wishes" %>:
        <% wishes.forEach(function(wish) { %>
            <div class="wish shadow">
                <% wish.items.forEach(function(item) { %>
                    <div class="item">
                        <div class="item-name"><%=item.item_name%></div>
                        <img class="item-screenshot" alt="<%=item.item_name%>" src="<%=item.item_url_screenshot%>">
                    </div>
                <% }); %>
                <div class="wish-description"><%=wish.wish_description%></div>
                <%- include('wish-progressbar', {wish}); -%>
                <a href="/wish/<%=wish.wish_hashid%>">detail</a>
            </div>
        <% }); %>
    <% } %>
    </div>
    <div>
        <h2>Settings</h2>
        <p><a href="/cards">payment method</a></p>
    </div>
</div>

<%- include('foot'); -%>